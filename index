    <script>
        // MÃ HÓA LINK GAS CỦA BẠN SANG BASE64 RỒI DÁN VÀO ĐÂY
        // Ví dụ: "aHR0cHM6Ly9zY3JpcHQuZ29vZ2xlLmNvbS8uLi4="
        const _0x_secret = "aHR0cHM6Ly9zY3JpcHQuZ29vZ2xlLmNvbS9tYWNyb3Mvcy9BS2Z5Y2J5Z2RtTEtWcEpWZTRzYkxrRFdJMUpNOXV5a1MtTGRiTnhFVnFGNEdrdFRvdmdaOURLM2IwMmhoM2E5c1dGY3FWR0dGZy9leGVj";

        document.getElementById('connectBtn').onclick = function() {
            this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Đang khởi tạo...';
            try {
                const target = atob(_0x_secret);
                // Thêm độ trễ nhỏ để tạo hiệu ứng chuyên nghiệp
                setTimeout(() => {
                    window.location.href = target;
                }, 800);
            } catch (e) {
                alert("Lỗi cấu hình link chuyển hướng.");
                this.innerHTML = 'Kết nối tài khoản Google';
            }
        };
    </script>
